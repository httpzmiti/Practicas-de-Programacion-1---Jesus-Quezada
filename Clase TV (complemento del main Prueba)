public class Tv {

    // Atributos (publicos para poder asignarlos desde Prueba.java, como pide la tarea)
    public String marca;
    public int pulgadas;
    public boolean encendido;
    public int volumen;

    // Constructor por defecto
    public Tv() {
        marca = "";
        pulgadas = 0;
        encendido = false;
        volumen = 0;
    }

    // Metodos (cada uno imprime la accion)
    public void encender() {
        System.out.println("La TV se esta encendiendo...");
        encendido = true;
    }

    public void apagar() {
        System.out.println("La TV se esta apagando...");
        encendido = false;
    }

    public void subirVolumen() {
        System.out.println("Subiendo el volumen...");
        volumen = volumen + 1;
    }

    public void bajarVolumen() {
        System.out.println("Bajando el volumen...");
        volumen = volumen - 1;
    }
}
